<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/LinearOne">

    <LinearLayout style = "@style/LinearParent"
        android:layout_weight="2">
        <TextView style = "@style/TextView"
            android:text="@string/select_the_number_of_rounds"
            />
    </LinearLayout>

    <LinearLayout style = "@style/LinearParent"
        android:layout_weight="2">
        <EditText style = "@style/EditText"
            android:id="@+id/chosenittext"
            android:inputType="numberDecimal"
            />
    </LinearLayout>

    <LinearLayout style = "@style/LinearParent"
        android:layout_weight="2">
        <TextView style = "@style/TextView"
            android:text="@string/select_longedit"
            />
    </LinearLayout>

    <LinearLayout style = "@style/LinearParent"
        android:layout_weight="2">
        <EditText style = "@style/EditText"
            android:id="@+id/chosenEditLong"
            />
    </LinearLayout>

    <LinearLayout style = "@style/LinearTwo">
        <TextView style = "@style/TextView"
            android:text="@string/select_latitude"
            />
    </LinearLayout>

    <LinearLayout style = "@style/LinearTwo">
        <EditText style = "@style/EditText"
            android:id="@+id/chosenEditLatit"
            />
    </LinearLayout>

    <LinearLayout style = "@style/LinearTwo"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">
        <Button style = "@style/ButtonMenu"
            android:id="@+id/chosenitbutton"
            android:text="@string/start_game"
            />
    </LinearLayout>

</LinearLayout>