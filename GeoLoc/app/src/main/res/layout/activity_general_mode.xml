<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style = "@style/LinearParent"
        android:layout_weight="4">
        <TextView style = "@style/Text"
            android:text="@string/select_the_number_of_rounds"
            />
    </LinearLayout>

    <LinearLayout style = "@style/LinearParent"
        android:layout_weight="4">
        <EditText style = "@style/Text"
            android:id="@+id/generaledittext"
            android:layout_width="match_parent"
            android:inputType="numberDecimal"
            />
    </LinearLayout>

    <LinearLayout style = "@style/LinearParent"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_weight="4">
        <Button style = "@style/ButtonMenu"
            android:id="@+id/generaleditbutton"
            android:text="@string/start_game"
            />
    </LinearLayout>

    <LinearLayout style = "@style/LinearParent"
        android:layout_weight="2">
    </LinearLayout>

</LinearLayout>
